<UserControl x:Class="MyStock.Controls.ThemeSwitcher"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="50"
             d:DesignWidth="50"
             mc:Ignorable="d">
    <Grid x:Name="MainGrid">
        <Button x:Name="ChangeToDarkBtn"
                Padding="8,4"
                Click="ChangeToDarkTheme"
                Cursor="Hand"
                Foreground="{DynamicResource MaterialDesignBody}"
                Style="{StaticResource MaterialDesignFlatButton}"
                ToolTip="Enable Dark Mode">
            <materialDesign:PackIcon Kind="NightSky" />
        </Button>

        <Button x:Name="ChangeToLightBtn"
                Padding="8,4"
                Click="ChangeToLightTheme"
                Cursor="Hand"
                Foreground="{DynamicResource MaterialDesignBody}"
                Style="{StaticResource MaterialDesignFlatButton}"
                ToolTip="Enable Light Mode">
            <materialDesign:PackIcon Kind="WhiteBalanceSunny" />
        </Button>
    </Grid>
</UserControl>
